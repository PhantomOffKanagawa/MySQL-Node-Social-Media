<footer class="bg-light text-center vw-100 position-fixed bottom-0">
    <!-- Grid container -->
    <div class="container p-4">
        <% if(typeof simpleIsLogged != 'undefined' && simpleIsLogged == true) { %>
        <a href="/logout" type="button" class="btn btn-outline-secondary" data-mdb-ripple-color="#000000">
            Logout
        </a>
        <a href="/myaccount" type="button" class="btn btn-outline-secondary" data-mdb-ripple-color="#000000">
            <i class="fa-solid fa-user"></i>
        </a>
        <% if(editable) {%>
        <button type="button" class="btn btn-outline-warning btn-floating" data-mdb-ripple-color="#ffffff"
            data-bs-toggle="modal" data-bs-target="#edit-modal">
            Edit
            <i class="fas fa-edit"></i>
        </button>
        <button type="button" class="btn btn-outline-success btn-floating" data-mdb-ripple-color="#ffffff"
            data-bs-toggle="modal" data-bs-target="#link-modal">
            Link
            <i class="fas fa-add"></i>
        </button>
        <button type="button" class="btn btn-outline-danger btn-floating" data-mdb-ripple-color="#ffffff"
            id="remove-link" onclick='$(".link-remove-button").toggle();'>
            <i class="fas fa-remove"></i>
        </button>
        <% } %>
        <button type="button" class="btn btn-outline-success btn-floating" data-mdb-ripple-color="#ffffff"
            data-bs-toggle="modal" data-bs-target="#post-creator-modal">
            Post
            <i class="fas fa-pen-nib"></i>
        </button>
        <a href="shortenlink" class="btn btn-outline-info btn-floating" data-mdb-ripple-color="#ffffff">
            Link Shortener
            <i class="fa-solid fa-link-slash"></i>
        </a>
        <% } %>
        <a href="/trending" class="btn btn-outline-info btn-floating" data-mdb-ripple-color="#ffffff">
            Trending
            <i class="fa-solid fa-ranking-star"></i>
        </a>
    </div>
    <!-- Grid container -->
</footer>


<% if(typeof simpleIsLogged != 'undefined' && simpleIsLogged == true) { %>
<%- include("postCreator") %>
<% } %>

<script>
    $(document).ready(function () {
        $("body").css("margin-bottom", $("footer").height());
        $(window).resize(function () {
            $("body").css("margin-bottom", $("footer").height());
        });
    });
</script>